# CortexOS â€“ copy to .env and fill in real values. Do not commit .env.

# Postgres (required for memory store)
CORTEX_DATABASE_URL=postgresql://user:password@localhost:5432/cortexos

# Redis (optional, for short-term cache)
CORTEX_REDIS_URL=redis://localhost:6379/0

# Neo4j (optional, for graph)
CORTEX_NEO4J_URI=bolt://localhost:7687
CORTEX_NEO4J_USER=neo4j
CORTEX_NEO4J_PASSWORD=your_password

# LLM for extraction and consolidation (optional; needed for /memory/ingest and consolidation)
OPENAI_API_KEY=sk-...
OPENAI_API_BASE=https://api.openai.com/v1
CORTEX_EXTRACTION_MODEL=gpt-4o-mini
CORTEX_CONSOLIDATION_MODEL=gpt-4o-mini

# Embeddings (default: sentence-transformers, no key needed)
CORTEX_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# MVN checkpoint (optional)
# CORTEX_MVN_CHECKPOINT=checkpoints/mvn.pt

# API server
CORTEX_API_HOST=0.0.0.0
CORTEX_API_PORT=8000
